{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist/ts",
    "rootDir": "./src/ts",
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules", "dist"]
} 